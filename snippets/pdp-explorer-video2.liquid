{{ 'video-section.css' | asset_url | stylesheet_tag }}
{{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}

{% comment %} First of all, we get last part of the URL that's supposedly the Youtube Video ID {% endcomment %}
{% assign video_id = context.metafields.custom.more_to_explorer_video2 | split: '/' | last %}

{% comment %} but we need strip any extra URL params {% endcomment %}
{% assign video_id = video_id | split: '?' | last %}

{% comment %} Finally, remove any hash string {% endcomment %}
{% assign video_id = video_id | split: '=' | last %}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="video-section isolate">
    <noscript>
      <div
        class="video-section__media"
        {% if context.metafields.custom.more_to_explorer_image2 != blank %}
          style="padding-bottom: {{ 1 | divided_by: context.metafields.custom.more_to_explorer_image2.aspect_ratio | times: 100 }}%;"
        {% endif %}
      >
        <a
          href="{{ context.metafields.custom.more_to_explorer_video2}}"
          class="video-section__poster media media--transparent media--landscape{% if context.metafields.custom.more_to_explorer_image2 == blank %} video-section__placeholder{% endif %}"
        >
          {%- if context.metafields.custom.more_to_explorer_image2 != blank -%}
            {%- capture sizes -%}
              100vw
            {%- endcapture -%}
            {%- assign alt = 'sections.video.load_video' | t: description: section.settings.description | escape -%}
            
            {% assign img_name = context.metafields.custom.more_to_explorer_image2 | split: "/" %}
            <img src="{{img_name.last | file_url}}"  loading="lazy" width="1500" height="1500">
          {%- elsif video_id != blank -%}
            {% assign thumbnail_url = 'http://img.youtube.com/vi/' | append: video_id | append: '/maxresdefault.jpg' %}
            {%- capture sizes -%}
                100vw
            {%- endcapture -%}
            {%- assign alt = 'sections.video.load_video' | t: description: section.settings.description | escape -%}
            <img src="{{thumbnail_url}}" loading="lazy" alt="{{alt}}"> 
          {%- else -%}
            {{ 'collection-2' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
          {%- endif -%}
        </a>
      </div>
    </noscript>
    <deferred-media
      class="video-section__media deferred-media no-js-hidden gradient global-media-settings global-media-settings--full-width"
      data-media-id="{{ video_id }}"
    >
      <button
        id="Deferred-Poster-Modal-{{ video_id }}"
        class="video-section__poster media deferred-media__poster media--landscape"
        type="button"
        aria-label="{{ 'sections.video.load_video' | t: description: section.settings.description | escape }}"
      >
        {%- if context.metafields.custom.more_to_explorer_image2 != blank -%}
          {%- capture sizes -%}
              100vw
          {%- endcapture -%}
          {%- assign alt = 'sections.video.load_video' | t: description: section.settings.description | escape -%}
          {% assign img_name = context.metafields.custom.more_to_explorer_image2 | split: "/" %} 
          <img src="{{img_name.last | file_url}}" loading="lazy" alt="{{alt}}">
        {%- elsif video_id != blank -%}
          {% assign thumbnail_url = 'http://img.youtube.com/vi/' | append: video_id | append: '/maxresdefault.jpg' %}
          {%- capture sizes -%}
              100vw
          {%- endcapture -%}
          {%- assign alt = 'sections.video.load_video' | t: description: section.settings.description | escape -%}
          <img src="{{thumbnail_url}}" loading="lazy" alt="{{alt}}">
        {%- else -%}
          {{ 'collection-2' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
        {%- endif -%}
        <span class="deferred-media__poster-button motion-reduce">
          {%- render 'icon-play' -%}
        </span>
      </button>
      <template>
          <iframe
            src="https://www.youtube.com/embed/{{ video_id }}?enablejsapi=1"
            class="js-youtube"
            allow="autoplay; encrypted-media"
            allowfullscreen
            title="{{ section.settings.description | escape }}"
          ></iframe>
      </template>
    </deferred-media>
  </div>
</div>