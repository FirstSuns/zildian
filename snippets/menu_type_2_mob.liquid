<div class="banner__content">
  <div class="info">
    <h2 class="h1" style="max-width: {{block.settings.max_width}}px;">{{block.settings.title}}</h2>
    <div class="nav-brand-card">
      <div class="card_title">
        <a href="{{ block.settings.link_1 }}">
        <div class="nav-brand-img">
            <!--place img tag-->
          {% if block.settings.image_2 != blank %}
            <img class="switcher-store" src="{{ block.settings.image_1 | img_url:'master' }}">
            {% endif %}
        </div>
        {{  block.settings.title_1}}</a></div>
        {% if block.settings.text_1 != blank %}
          <p>{{block.settings.text_1}}</p>
        {% endif %}
        
    </div>

    <div class="nav-brand-card">
      <div class="card_title"><a href="{{ block.settings.link_2 }}">
        <div class="nav-brand-img">
            <!--place img tag-->
          {% if block.settings.image_2 != blank %}
            <img class="switcher-store" src="{{ block.settings.image_2 | img_url:'master' }}">
          {% endif %}
        </div>
        {{  block.settings.title_2}}</a></div>
        {% if block.settings.text_2 != blank %}
          <p>{{block.settings.text_2}}</p>
        {% endif %}
        
    </div>

    <div class="nav-brand-card">
      <div class="card_title"><a href="{{ block.settings.link_3 }}">
        <div class="nav-brand-img">
            <!--place img tag-->
          {% if block.settings.image_3 != blank %}
            <img class="switcher-store" src="{{ block.settings.image_3 | img_url:'master' }}">
          {% endif %}
        </div>
        {{  block.settings.title_3}}</a></div>
        {% if block.settings.text_2 != blank %}
          <p>{{block.settings.text_3}}</p>
        {% endif %}
        
    </div>

    
    {% if block.settings.button_title != blank %}
      <a href="{{block.settings.button_link}}" class="button">{{block.settings.button_title}}</a>
    {% endif %}
  </div>
  
</div>